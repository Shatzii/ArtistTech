# Production Environment Configuration
# Copy this file to .env.production and update with actual values

# Application
NODE_ENV=production
PORT=5000
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://username:password@host:5432/artisttech
DB_SSL=true
DB_MAX_CONNECTIONS=20

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-here
ENCRYPTION_KEY=your-32-character-encryption-key
SESSION_SECRET=your-session-secret-here

# External APIs (if used)
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Storage
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=mp3,wav,flac,aac,mp4,mov,avi,jpg,png,gif,webp

# Redis (for caching and sessions)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-redis-password

# Monitoring
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-key

# CDN
CDN_URL=https://cdn.artist-tech.com
CDN_BUCKET=artist-tech-assets

# Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-key
STRIPE_SECRET_KEY=sk_live_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your-mixpanel-token

# Social Media APIs
TIKTOK_CLIENT_ID=your-tiktok-client-id
INSTAGRAM_CLIENT_ID=your-instagram-client-id
YOUTUBE_CLIENT_ID=your-youtube-client-id

# AI Engine Configuration
AI_ENGINE_TIMEOUT=30000
AI_ENGINE_MAX_CONCURRENT=10
AI_ENGINE_CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS
ALLOWED_ORIGINS=https://artist-tech.com,https://www.artist-tech.com

# Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/artist-tech.crt
SSL_KEY_PATH=/etc/ssl/private/artist-tech.key