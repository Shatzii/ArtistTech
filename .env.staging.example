# Staging Environment Configuration
# Copy this file to .env.staging and update with actual values

# Application
NODE_ENV=staging
PORT=5000
LOG_LEVEL=debug

# Database (Staging)
DATABASE_URL=postgresql://username:password@staging-db:5432/artisttech_staging
DB_SSL=false
DB_MAX_CONNECTIONS=10

# Authentication & Security
JWT_SECRET=staging-jwt-secret-change-in-production
ENCRYPTION_KEY=staging-32-character-encryption-key
SESSION_SECRET=staging-session-secret

# External APIs (Staging/Test keys)
OPENAI_API_KEY=your-staging-openai-key
ANTHROPIC_API_KEY=your-staging-anthropic-key

# Email (Staging)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=staging-user
SMTP_PASS=staging-pass

# File Storage (Staging)
UPLOAD_PATH=/app/uploads/staging
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=mp3,wav,flac,aac,mp4,mov,avi,jpg,png,gif,webp

# Redis (Staging)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# Monitoring (Staging)
SENTRY_DSN=your-staging-sentry-dsn
DATADOG_API_KEY=your-staging-datadog-key

# CDN (Staging)
CDN_URL=https://staging-cdn.artist-tech.com
CDN_BUCKET=artist-tech-staging-assets

# Payment Processing (Test mode)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-staging-webhook-secret

# Analytics (Staging)
GOOGLE_ANALYTICS_ID=GA_STAGING_MEASUREMENT_ID
MIXPANEL_TOKEN=your-staging-mixpanel-token

# Social Media APIs (Staging/Test)
TIKTOK_CLIENT_ID=your-staging-tiktok-client-id
INSTAGRAM_CLIENT_ID=your-staging-instagram-client-id
YOUTUBE_CLIENT_ID=your-staging-youtube-client-id

# AI Engine Configuration (Staging)
AI_ENGINE_TIMEOUT=60000
AI_ENGINE_MAX_CONCURRENT=5
AI_ENGINE_CACHE_TTL=1800

# Rate Limiting (Staging - more permissive)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=5000

# CORS (Staging)
ALLOWED_ORIGINS=https://staging.artist-tech.com,http://localhost:3000

# Backup (Staging)
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=7

# SSL/TLS (Staging - optional)
SSL_CERT_PATH=/etc/ssl/certs/staging.artist-tech.crt
SSL_KEY_PATH=/etc/ssl/private/staging.artist-tech.key